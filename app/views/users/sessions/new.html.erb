<div class="page-header">
  <center><h1>登录</h1></center>
</div>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="row top30"></div>
    <%= render "shared/notice" %>

    <div class="form-horizontal">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label '电子邮箱', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label '密码', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-9">
            <%= f.check_box :remember_me %>
            <%= f.label '记住我' %>
          </div>
        </div>
      <% end -%>
      <div class="form-group">
          <%= link_to '返 回', root_path, class: "btn btn-default pull-right"%>
          <%= f.submit "登 录", class: "btn btn-primary pull-right" %>

      </div>
    <% end %>
    </div>
    <br/>
    <%= render "users/shared/links" %>

  </div>
</div>