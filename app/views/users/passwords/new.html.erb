<div class="page-header">
  <center><h1>Forgot your password?</h1></center>
</div>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="row top30"></div>
    <%= render "shared/notice" %>

    <div class="form-horizontal">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <br>
      <div class="form-group">
        <%= f.label '电子邮箱', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <%= link_to 'Back', :back, class: "btn btn-default pull-right"%>
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary pull-right" %>
      </div>
    <% end %>
    </div>
    <br/>
    <%= render "users/shared/links" %>
  </div>
</div>