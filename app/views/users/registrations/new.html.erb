<div class="page-header">
  <center><h1>注册</h1></center>
</div>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="row top30"></div>
    <%= render "shared/notice" %>
    <div class="form-horizontal">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label '电子邮箱', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label '姓名', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :name, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label '密码', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", :placeholder=> min_password %>
        </div>
      </div>

       <div class="form-group">
        <%= f.label '确认密码', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
          <%= link_to '返 回', :back, class: "btn btn-default pull-right"%>
          <%= f.submit "注 册", class: "btn btn-primary pull-right" %>
      </div>
    <% end %>
    </div>
    <%= render "users/shared/links" %>
  </div>
</div>