<div class="page-header">
  <center><h1>修改账户信息</h1></center>
</div>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="row top30"></div>
    <%= render "shared/notice" %>
    <div class="form-horizontal">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label '电子邮箱', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label '姓名', class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label "新密码", class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", :placeholder=> "leave blank if you don't want to change it" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "新密码确认", class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

       <div class="form-group">
        <%= f.label "旧密码", class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control", :placeholder=> "we need your current password to confirm your changes"  %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <%= link_to '返 回', :back, class: "btn btn-default pull-right"%>
        <%= f.submit "更 新", class: "btn btn-primary pull-right" %>
        <%= button_to "注销我的账户", registration_path(resource_name), data: { confirm: "你确定吗?" }, method: :delete, class: "btn btn-danger pull-left" %>
      </div>
    <% end %>
    </div>
  </div>
</div>


