<%= form_for(@rent) do |f| %>
  <% if @rent.errors.any? %>
    <div class="alert alert-warning">
      <h2><%= pluralize(@rent.errors.count, "error") %> prohibited this rent from being saved:</h2>

      <ul>
      <% @rent.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="row top30"></div>
    <div class="form-horizontal">

    <div class="form-group">
      <%= f.label '标题', class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
      <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label '起租日期', class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
      <%= f.date_field :date_from, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label '结租日期', class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
      <%= f.date_field :date_to, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label '价格$', class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
      <%= f.text_field :price, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label '联系电话', class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
      <%= f.telephone_field :telephone, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label '微信号', class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
      <%= f.text_field :wechat, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label '小区名', class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
      <%= f.text_field :district, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label '简介', class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
      <%= f.text_area :description, :rows => "10", class: "form-control" %>
      </div>
    </div>
    <br>
    <div class="form-group text-right">
      <%= f.submit '提 交', class: "btn btn-primary" %>
      <%= link_to '返 回', :back, class: "btn btn-default"%>
    </div>
    </div>
  </div>
</div>
<% end %>
