<div class="text-center">
<div class="page-header">
  <center><h2><%= @rent.title %></h2></center>
</div>
<p>
  <strong>起租日期:</strong>
  <%= @rent.date_from %>
</p>

<p>
  <strong>结租日期:</strong>
  <%= @rent.date_to %>
</p>
<p>
  <strong>招租人:</strong>
  <%= @rent.user.name %>
</p>
<p>
  <strong>价格:</strong>
  <%= @rent.price %>
</p>
<p>
  <strong>小区名:</strong>
  <%= @rent.district %>
</p>
<p>
  <strong>简介:</strong>
  <%= @rent.description %>
</p>
<p>
  <strong>联系电话：</strong>
  <%= @rent.telephone %><br>
  <strong>微信号：</strong>
  <%= @rent.wechat %><br>
  <strong>电子邮箱：</strong>
  <%= @rent.user.email %>
</p>
<br>
<p>
<% if rent_authorized? current_user, @rent %>
  <%= link_to '编辑', edit_rent_path(@rent) %> | 
  <%= link_to '删除', @rent, method: :delete, data: { confirm: '确定删除嘛？' } %> | 
<% end %>
<%= link_to '返回', rents_path %>
</p>
</div>